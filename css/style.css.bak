/* Start Variables */
:root {
	--main-color: #a5492a;
	--secondary-color: #c96645;
	--white-color: #ffffff;
	--transparent-color: rgb(15 116 143 / 70%);
	--section-padding: 100px;
}
/* End Variables */

/* Start Global Rules */
*{
	-webkit-box-sizing:border-box;
	-moz-box-sizing:border-box;
	box-sizing:border-box;
	padding:0;
	margin:0;

}
html {
  scroll-behavior: smooth;
}
body {
	font-family: 'Open Sans', sans-serif;
}
ul {
	list-style:none;
}


.container {
	margin-right:auto;
	margin-left:auto;
	padding-left:15px;
	padding-right:15px;	
}

/* Media Query */
/* Small Screen */
@media (min-width:768px) {
	.container{
		width:750px;
	}
}

/* Medium Screen */
@media (min-width:992px) {
	.container{
		width:970px;
	}
}

/* Large Screen */
@media (min-width:1200px) {
	.container{
		width:1170px;
	}
}
/* End Global Rules */

/* Start HomePage */
span {
	color:var(--main-color);
}
/* End HomePage */

/* Start Header */
.header {
  background-color:var(--secondary-color);
}
.header .container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  min-height: 75px;
}

.header .logo img {
  height: 40px;
}
.header nav {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.header .nav .toggle-menu {
  color: white;
  font-size: 22px;
}
@media (min-width: 768px) {
  .header .nav .toggle-menu {
    display: none;
  }
}
.header .nav ul {
  display: flex;
      margin-right: 10px;

}
@media (max-width: 767px) {
  .header .nav ul {
    display: none;
  }
  .header .nav .toggle-menu:hover + ul {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: rgb(0 0 0 / 50%);
  }
  .header .nav ul li a {
    padding: 15px !important;
  }
}
.header .nav ul li a {
  padding: 16px 10px;
  display: block;
  color: var(--white-color);
  text-decoration: none;
  font-size: 14px;
  transition: 0.3s;
  position: relative;
  z-index: 2;
}
.header .nav ul li a.active,
.header .nav ul li a:hover {
  color: var(--main-color);
  border-bottom: 1px solid var(--main-color);
    background-color:white;
	    border-radius: 10px;

	

}
.header.nav .form {
  width: 40px;
  height: 30px;
  position: relative;
  margin-left: 30px;
  border-left: 1px solid white;
}
.header .nav .form i {
	color: var(--white-color);
	position: absolute;
	font-size: 18px;
	top: 50%;
	transform: translateY(-50%);
	right: 0;
	cursor: pointer;
}
/* End Header */

/* Start Home*/
.home .welcome{
	height:500px;
	background-color:#1f2021; 
	position:relative;
	background-image:url('../images/home/home-img.jpeg');
	background-size:cover;	  
}

.home .welcome .overlay {
	background-color: rgba(250,250,250,.1);
	position :absolute;
	color:var(--white-color);
    width: 350px;
    height: 120px;
    left: 100px;
    top: 170px;
	opacity:0.5;
}

.home .welcome .overlay p {
	color:var(--white-color);
	padding:20px;
}

/* Start About Us*/
.home .about {
	padding:50px 0;
	background-color: hsla(240, 11%, 95%, 0.856);
	width:100%;
	text-align:center;
}

.home .about h2{
	position: relative;
    font-weight: bold;
    margin-bottom: 30px;
}

.home .about h2:before{
	position: absolute;
    top: 35px;
    left: calc(50% - 50px);
    content: '';
    width: 100px;
    height: 2px;
    background-color: #9e9696;
}

.home .about h2:after{
    position: absolute;
    top: 35px;
    left: calc(50% - 25px);
    content: '';
    width: 50px;
    height: 4px;
    background-color: var(--main-color);
}
	
.home .about p{
	font-size:18px;
	color:#111;
}
/* End About Us*/


/* Start Footer */
 .footer{
	background-color:#1f2021;
	text-align:center;
	padding:20px;
	color:var(--white-color);
}
/* End Footer */